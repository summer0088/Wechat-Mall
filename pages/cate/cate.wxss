
page,.main{
    height: 100%;
    display:flex;
    flex-direction:row;
    justify-content:space-between;
}
.categroy-left{
    width: 150rpx;
    height: 100%;
    box-sizing: border-box;
}
.categroy-left .cate-list{
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size:26rpx;
    color:#333;
    background:#f5f5f5;
}
.categroy-left .cate-list.on{
    color:#E6007F;
    border-left: 3px solid #E6007F;
    background:#fff;
}
.categroy-right{
    width: 500rpx;
    height: 100%;
    overflow: hidden;
    margin-left:50rpx;
}


.category-title{
  height:80rpx;
  line-height:80rpx;
  font-size:26rpx;
  font-weight:500;
  color:#333;
}

.category-images{
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  justify-content:space-around;
  border-bottom:1px solid #ddd;
}

.category-images-cate{
  width:130rpx;
  height:180rpx;
  margin-bottom:20rpx;
}

.category-images-cate-image{
  border-radius:10rpx;
}

.category-images-cate-image image{
  width:130rpx;
  height:150rpx;
}

.category-images-cate-text{
  width:130rpx;
  height:30rpx;
  line-height:30rpx;
  text-align:center;
  font-size:24rpx;
  color:#666;
}
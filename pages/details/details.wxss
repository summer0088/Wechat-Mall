.cart-cart{
  width:100%;
  height:80rpx;
  padding:10rpx 20rpx;
  background:#fff;
  position:fixed;
  bottom:0rpx;
  z-index:2;
  display:flex;
  flex-direction:row;
  justify-content:space-around;
}

.null-cart{
  padding:0rpx 80rpx;
  border:1px solid #ddd;
  position:relative; 
}

.null-cart image{
  display:inline-block;
  text-align:center;
  width:80rpx;
  height:80rpx;
}

.add-cart{
  width:400rpx;
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  font-size:28rpx;
  color:#fff;
  font-weight:400;
  background:#E6007F;
  border-radius:10rpx;
  margin-right:40rpx;
}

.carnum{
  position:absolute;
  top:10rpx;
  right:80rpx;
  width:30rpx;
  height:30rpx;
  line-height:30rpx;
  text-align:center;
  background:#E6007F;
  border-radius:50%;
  color:#fff;
  font-size:20rpx;
}
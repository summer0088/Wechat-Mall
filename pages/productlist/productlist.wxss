/* pages/productlist/productlist.wxss */
.nav,.search{
  width:750rpx;
  height:80rpx;
  line-height:80rpx;
  display:flex;
  flex-direction:row;
  justify-content: space-around;
}

.nav-list{
  font-size:24rpx;
  color:#333;
  padding:0rpx 26rpx;
}

.nav .active{
  padding:0rpx 26rpx;
  border-bottom:2px solid #E6007F;
  color:#E6007F;
}

.search{
  height:60rpx;
  font-size:24rpx;
  color:#666;
  margin-top:10rpx;
  margin-left:10rpx;
}

.search-input{
  width:650rpx;
  display:flex;
  flex-direction:row;
  background:#fff;
  border:2px solid #FE7DA3;
  border-radius:10rpx;
}

.search-input-image{
  padding:0rpx 10rpx;
  width:30rpx;
  height:30rpx;
  line-height:70rpx;
}

.search-input-image image{
  padding:0rpx 10rpx;
  width:30rpx;
  height:30rpx;
}

.search-input-input{
  width:550rpx;
  height:50rpx;
  margin-left:10rpx;
}
.cate{
  width:70rpx;
  height:90rpx;
}

.cate-image{
  width:70rpx;
}

.cate-image image{
  width:58rpx;
  height:58rpx;
  padding-left:10rpx;
}

.cate-text{
  margin-top:-60rpx;
  margin-left:10rpx;
}

.main-product{
  background:#f5f5f5;
}

.main-product-list{
  height:450rpx;
  margin-bottom:20rpx;
}

.product-list-image{
  height:350rpx;
}

.product-list-image image{
  width:100%;
  height:350rpx;
}

.product-list-text{
  background:#fff;
  padding:10rpx 20rpx;
}

.product-list-top{
  font-size:26rpx;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
}

.twoday{
  font-size:20rpx;
  color:#999;
}
.product-list-bottom{
  display:flex;
  flex-direction:row;
}
.product-bottom-image{
  margin-right:10rpx;
}

.product-bottom-image image{
  width:28rpx;
  height:28rpx;
}

.product-bottom-text{
  padding:10rpx 0rpx;
  font-size:20rpx;
  color:#FE7DA3;
}